      <p><%= @event.description["#{I18n.locale}"].nil? ? @event.title["#{I18n.default_locale}"] : @event.title["#{I18n.locale}"] %></p>
      <a class="btn btn-warning" href="#"><%= t :join %></a>
    </div>
  </div>

<% end %>
